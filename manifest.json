{
  "name": "Life Gamification",
  "version": "0.2.1",
  "description": "Measure your progress in your real life skills!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["src/event_page.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Life Gamification",
    "default_icon": "assets/icon16.png"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
